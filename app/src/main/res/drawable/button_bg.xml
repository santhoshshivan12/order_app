<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/button_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Set the button background color -->
    <solid android:color="#4053B9" /> <!-- Change to any color you like -->

    <!-- Define rounded corners -->
    <corners android:radius="30dp" /> <!-- Adjust this to change the roundness -->

    <!-- Add optional padding inside the button -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="10dp"
        android:bottom="10dp" />
</shape>
